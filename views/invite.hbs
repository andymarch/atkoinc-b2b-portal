      <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
        <div class="container-fluid">
          <div class="header-body">
            <!-- Card stats -->
            <div id="con_dashboard" class="row">
				<div class="table-responsive">
				    <div>
				    <table class="table align-items-center">
				        <thead class="thead-light">
				            <tr>
				                <th scope="col">
				                    Invite user to the portal
				                </th>
				            </tr>
				        </thead>
				        <tbody class="list">
				            <tr>
				                <th scope="row" class="name">
				                    <div class="media align-items-center">
				                        <span class="avatar rounded-circle mr-3">
				                          <span class="ni ni-single-02 text-white"></span>
				                        </span>
				                        <div class="media-body">
				                            <span class="mb-0 text-sm">{{user.firstName}} would like to invite:</span>
				                        </div>
				                    </div>
				                </th>
				            </tr> 
				            <tr>
				              <td>
				                <form action="/invite" method="POST">
				                  <div class="row">
				                    <div class="col-md-6">
				                      <div class="form-group">
				                        <span class="text-nowrap">first name</span>
				                        <input type="text" name="firstname" class="form-control" placeholder="John">
				                      </div>
				                    </div>
				                    <div class="col-md-6">
				                      <div class="form-group">
				                        <span class="text-nowrap">last name</span>
				                        <input type="text" name="secondname" placeholder="Doe" class="form-control" />
				                      </div>
				                    </div>
				                  </div>
				                  <div class="row">
				                    <div class="col-md-6">
				                      <div class="form-group">
				                        <span class="text-nowrap">email address</span>
				                        <input type="text" name="email" class="form-control" placeholder="john.doe@domain.com">
				                      </div>
				                    </div>
				                    <div class="col-md-6">
				                      <div class="form-group">
				                        <span class="text-nowrap">organization</span>
				                        <input type="text" name="organization"
				                        class="form-control"
				                        value="{{organization}}"
				                        placeholder="Atko inc." readonly="readonly">
				                      </div>
				                    </div>
				                  </div>
				                  <div class="row">
				                    <div class="col-md-6">
				                      <div class="form-group">
				                        <span class="text-nowrap">creator</span>
				                        <input type="text" name="creator" class="form-control" placeholder="{{user.email}}" readonly="readonly">
				                      </div>
				                    </div>
				                    <div class="col-md-6">
				                      <div class="form-group">
				                        <span class="text-nowrap">federated</span>
				                        <input type="text" name="federated" value="{{federated}}" class="form-control" readonly="readonly">
				                      </div>
				                    </div>
				                  </div>
								  <div class="row">
				                    <div class="col-md-6">
				                      <div class="form-group">
				                        <span class="text-nowrap">Application 1 Role</span>
										<select class="form-control" name="role_app1" >
											<option value="">None</option>
											<option value="user">User</option>
											<option value="admin">Admin</option>
											<option value="super admin">Super Admin</option>
										</select>
				                      </div>
				                    </div>
				                    <div class="col-md-6">
				                      <div class="form-group">
				                        <span class="text-nowrap">Application 2 Role</span>
										<select class="form-control" name="role_app2" >
											<option value="">None</option>
											<option value="user">User</option>
											<option value="admin">Admin</option>
											<option value="super admin">Super Admin</option>
										</select>
				                      </div>
				                    </div>
				                  </div>
				                  <div class="row">
				                    <div class="col-md-6">
				                      <div class="form-group">
				                      	<button style="display:none" class="btn-positive" type="submit">Submit</button>
				                      	<button type="submit" class="btn btn-primary my-4">Send invite</button>
				                      </div>
				                    </div>
				                  </div>
				                </form>
				              </td>
				            </tr>           
				        </tbody>
				    </table>
				</div>
			</div>
          </div>      
        </div>
      </div>

{{#if err}}
ERROR: {{error}}
{{/if}}